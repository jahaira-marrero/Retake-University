<% if flash[:errors]%>
    <ul>
        <% flash[:errors].each do |error|%>
        <li>
            <%= error %>
        </li>
         <% end %>
    </ul>
<%end%>


<%= form_for @grade do |f| %>

    <div class="field">
        <%= f.label :student_id %>
    <div class="select">
        <%= f.collection_select :student_id, @students, :id, :name %>
    </div>
    </div>

    <div class="select">
    <%= f.label :course_id %>
    <div class="select">
    <%= f.collection_select :course_id, @courses, :id, :name %>
    </div>
    </div>
    <%# <%= f.label :grade_value %>
    <%# <%= f.collection_select :grade_value, (1..10).to_a, :itself, :itself %>
 <br>
    <div class="field is-grouped">
